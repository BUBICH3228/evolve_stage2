<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/hero_stats/hero_stats.css"/>
        <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/hero_stats/hero_stats.js"/>
    </scripts>
    <snippets>
		<snippet name="TextSnippet">
            <Button id="Stat" class="PanelClass" onmouseover="UIShowTextTooltip( #ui_hero_stats_auto_use_info)" onmouseout="UIHideTextTooltip()">
                <Image id="IconStat" src=""  onmouseout="UIHideTextTooltip()"/>
                <Label id="NameStat" class="Text" text="" />
                <Label id="NumberStat" class="Text" text="0" />
            </Button>
		</snippet>
	</snippets>
    <Panel class="Root" hittest="false" hittestchildren="true">
        <Panel id="MainWindow" hittest="true" class="Hidden">
            <Panel id="HeroModelPanel">
                <Label id="HeroName" class="TitleText" text="" />
                <Label id="CountPoint" text="#ui_hero_stats_count_point" />
            </Panel>
            <Panel id="StatsPanel">
                <Label id="PrimaryAttributeLable" class="TitleText" text="#ui_hero_stats_primary_attribute_lable" />
                <Panel id="PrimaryAttribute" class="NameStatsClass"/>
                <Label id="AttackAttributeLable" class="TitleText" text="#ui_hero_stats_attack_attribute_lable" />
                <Panel id="AttackAttribute" class="NameStatsClass"/>
                <Label id="DefenseAttributeLable" class="TitleText" text="#ui_hero_stats_defense_attribute_lable" />
                <Panel id="DefenseAttribute" class="NameStatsClass"/>
                <Label id="OthersStatsLable" class="TitleText" text="#ui_hero_stats_others_attribute_lable" />
                <Panel id="OthersStats" class="NameStatsClass"/>
            </Panel>
        </Panel>
    </Panel>
</root>