<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/quests/quests_tracker.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/quests/quests_tracker.js" />
		<include src="file://{resources}/scripts/custom_game/quests/quests_markers.js" />
	</scripts>
	<snippets>
		<snippet name="QuestPanel">
			<Panel class="QuestContainer">
				<Panel class="QuestNameContainer">
					<Panel class="QuestNameIcon"/>
					<Label id="QuestName" text="Quest name"/>
					<Button id="QuestCancelButton" hittest="true">
						<Image src="s2r://panorama/images/control_icons/x_close_grey_psd.vtex"/>
					</Button>
				</Panel>
				<Panel id="QuestActionsContainer"/>
			</Panel>
		</snippet>
		<snippet name="QuestAction">
			<Panel class="QuestActionContainer">
				<Panel class="QuestActionIcon"/>
				<Panel class="QuestActionSubContainer">
					<Panel class="QuestActionLine"/>
					<Label id="QuestActionDescription" class="QuestAction" text="[Bug, Report pls]"/>
					<Label id="QuestActionProgress" text="0 / 0"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>
	<Panel class="Root" hittest="false" hittestchildren="true">
        <Panel id="QuestsTracker" hittest="false"/>
	</Panel>
</root>


