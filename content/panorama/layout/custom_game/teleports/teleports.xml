<root>
    <styles>
		<include src="file://{resources}/styles/custom_game/shared/window.css" />
        <include src="file://{resources}/styles/custom_game/teleports/teleports.css"/>
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/teleports/teleports.js"/>
    </scripts>
    <snippets>
        <snippet name="TeleportButton">
            <Button class="TeleportButtonContainer">
                <Image id="TeleportButtonIcon" src="none"/>
                <Label id="TeleportButtonTitle" text="Tooltip missing"/>
                <Panel class="TeleportButtonLockedContainer">
                    <Label class="TeleportButtonLockedLabel" text="#ui_teleports_unlock_boss_required"/>
                    <Label class="TeleportUnlockBossName" id = "TeleportUnlockBossName" text=""/>
                </Panel>
            </Button>
        </snippet>
    </snippets>
    <Panel class="Root" hittest="false" hittestchildren="true">
        <Panel hittest="true" id="MainWindow" class="Hidden">
            <Panel class="WindowTitle">
                <Panel class="WindowTitleContainer">
                    <Label class="WindowTitleLabel" text="#ui_teleports_title"/>
                    <Panel class="CloseButtonContainer">
                        <Button id="CancelButton" class="CloseButton" onactivate="OnCloseButtonPressed()"/>
                    </Panel>
                </Panel>

            </Panel>
            <Panel class="WindowContent">
                <Panel id="TeleportButtonsContainer"/>
            </Panel>
        </Panel>
    </Panel>
</root>