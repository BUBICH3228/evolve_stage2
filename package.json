{
  "name": "evolve_stage2",
  "private": true,
  "scripts": {
    "prepare": "node ./node_modules/ts-patch/bin/cli install",
    "postinstall": "node scripts/install.js",
    "launch": "node scripts/launch.js",
    "release": "run-s release:clear release:pipeline",
    "release:clear": "node ./scripts/release_clear.js",
    "release:pipeline": "run-s release:vscripts-release release:panorama-release release:compile-assets",
    "release:vscripts-release": "run-s release:vscripts-release-build-legacy release:vscripts-release-build",
    "release:vscripts-release-build": "tstl --project src/vscripts/tsconfig.json",
    "release:vscripts-release-build-legacy": "node ./scripts/vscripts_build_legacy.js",
    "release:panorama-release": "run-s release:panorama-release-build release:panorama-release-build-post",
    "release:panorama-release-build": "tsc --project src/panorama/tsconfig.json",
    "release:panorama-release-build-post": "node ./scripts/panorama_build.mjs release",
    "release:compile-assets": "node ./scripts/release_compile_assets.js",
    "dev": "run-s dev:clear dev:pipeline",
    "dev:clear": "node ./scripts/dev_clear.js",
    "dev:pipeline": "run-p dev:link-common dev:panorama-build dev:vscripts-build dev:eslint dev:prettier-watch",
    "dev:link-common": "run-p dev:link-common-build dev:link-common-watch",
    "dev:link-common-build": "node ./scripts/link_common.js",
    "dev:link-common-watch": "onchange \"src/common/**/*.ts\" -- node ./scripts/link_common.js",
    "dev:panorama-build": "run-p dev:panorama-ts-watcher dev:panorama-ts-watcher-post",
    "dev:panorama-ts-watcher": "tsc-watch --noClear -p ./src/panorama/tsconfig.json --compiler typescript/bin/tsc",
    "dev:panorama-ts-watcher-post": "node ./scripts/panorama_build.mjs dev-watch",
    "dev:vscripts-build": "run-p dev:vscripts-watch dev:vscripts-legacy-watch",
    "dev:vscripts-watch": "tsc-watch --noClear -p ./src/vscripts/tsconfig.json --compiler typescript-to-lua/dist/tstl --onFirstSuccess \"node ./scripts/vscripts_build_legacy.js\"",
    "dev:vscripts-legacy-watch": "onchange \"src/vscripts/**/*.lua\" -- node ./scripts/onchange_legacy.js {{changed}} vscripts",
    "dev:prettier-watch": "onchange \"src/**/*.ts\" -- prettier --config .prettierrc {{changed}} --write --loglevel warn",
    "dev:eslint": "run-p dev:eslint-build dev:eslint-watch",
    "dev:eslint-watch": "onchange \"src/**/*.ts\" -- eslint {{changed}} --fix --ext .ts",
    "dev:eslint-build": "eslint . --fix --ext .ts & exit 0"
  },
  "devDependencies": {
    "@moddota/find-steam-app": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@typescript-to-lua/language-extensions": "^1.0.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^9.0.0",
    "lua-types": "^2.13.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.8.7",
    "rollup": "^3.21.0",
    "ts-patch": "^2.1.0",
    "tsc-watch": "^6.0.0",
    "tslib": "^2.5.0",
    "typescript": "^4.8.3",
    "typescript-to-lua": "1.10.1",
    "watcher": "^2.2.2"
  }
}
